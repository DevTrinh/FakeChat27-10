<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp56"
        android:layout_height="@dimen/dp56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp14"
        android:layout_marginRight="@dimen/dp16"
        android:src="@drawable/iv_test"/>

    <ImageView
        android:id="@+id/iv_online"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        app:layout_constraintRight_toRightOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        android:paddingTop="@dimen/dp8"
        android:paddingLeft="@dimen/dp4"
        android:src="@drawable/ic_online"/>

    <TextView
        android:id="@+id/tv_title_chat"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dp18"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="@dimen/dp16"
        android:text="Nghiêm Đình Mừng"
        android:lines="1"/>

    <TextView
        android:id="@+id/tv_item_content_chat"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_chat"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintRight_toLeftOf="@id/iv_send"
        android:paddingLeft="@dimen/dp18"
        android:ellipsize="end"
        android:lines="1"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14"
        android:text="Example of 6 TextViews, each row will take up 50% of the screen height, and within each row each TextView will take up 33% of the screen width."/>

    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="@dimen/dp44"
        android:layout_height="@dimen/dp56"
        android:src="@drawable/ic_sended_test"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        android:padding="@dimen/dp12"/>

</androidx.constraintlayout.widget.ConstraintLayout>