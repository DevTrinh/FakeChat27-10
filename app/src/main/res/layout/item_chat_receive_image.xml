<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp175"
        android:layout_marginLeft="@dimen/dp10">

        <FrameLayout
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="left|center|bottom">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:src="@drawable/iv_user_default" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="bottom|right"
                android:paddingLeft="@dimen/dp6"
                android:paddingTop="@dimen/dp8"
                android:src="@drawable/ic_online" />
        </FrameLayout>
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_image_receive"
        android:layout_width="@dimen/dp165"
        android:layout_height="@dimen/dp175"
        android:layout_marginBottom="@dimen/dp2"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp2"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_test"
        app:riv_corner_radius="@dimen/dp15" />
</LinearLayout>